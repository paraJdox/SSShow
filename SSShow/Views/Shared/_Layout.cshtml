<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SSShow</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SSShow.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column">
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-light bg-white border-bottom box-shadow mb-3 d-flex justify-content-center">
            <div class="main-nav">
                @*logo*@
                <a class="d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="logo" src="~/img/logo/logo-full.svg" alt="SSShow" />
                </a>

                @*search bar*@
                <input type="text" class="search-bar form-control mx-auto" placeholder="Search show, user..." aria-label="Search Bar">

                @*nav-toggler*@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @*nav-items*@
                <div class="navbar-items navbar-collapse collapse d-md-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>

                @*nav-buttons (Sign In and Sign Up)*@
                <div class="navbar-buttons d-none d-md-flex" role="group" aria-label="Sign In and Sign Up buttons">
                    <button type="button" class="btn btn-outline-dark text-nowrap me-2">Sign In</button>
                    <button type="button" class="btn btn-dark text-nowrap">Sign Up</button>
                </div>
            </div>
        </nav>
    </header>

    <div class="container g-0 h-100 flex-grow-1 d-flex align-items-center">
        <main role="main" class="w-100 mb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container g-0">
            &copy; 2021 - SSShow - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
